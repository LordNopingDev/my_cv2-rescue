{% extends 'base.html.twig' %}

{% block title %}Personalinfo index{% endblock %}

{% block body %}
    <h1>Personalinfo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Presentation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personalinfo in personalinfos %}
            <tr>
                <td>{{ personalinfo.id }}</td>
                <td>{{ personalinfo.name }}</td>
                <td>{{ personalinfo.phone }}</td>
                <td>{{ personalinfo.email }}</td>
                <td>{{ personalinfo.presentation }}</td>
                <td>
                    <a href="{{ path('personalinfo_show', {'id': personalinfo.id}) }}">show</a>
                    <a href="{{ path('personalinfo_edit', {'id': personalinfo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('personalinfo_new') }}">Create new</a>
{% endblock %}
