{% extends 'base.html.twig' %}

{% block title %}Experience index{% endblock %}

{% block body %}
    <h1>Experience index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Etablissement</th>
                <th>Lieu</th>
                <th>Poste</th>
                <th>Date_debut</th>
                <th>Date_fin</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for experience in experiences %}
            <tr>
                <td>{{ experience.id }}</td>
                <td>{{ experience.name }}</td>
                <td>{{ experience.etablissement }}</td>
                <td>{{ experience.lieu }}</td>
                <td>{{ experience.poste }}</td>
                <td>{{ experience.dateDebut ? experience.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ experience.dateFin ? experience.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ experience.description }}</td>
                <td>
                    <a href="{{ path('experience_show', {'id': experience.id}) }}">show</a>
                    <a href="{{ path('experience_edit', {'id': experience.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('experience_new') }}">Create new</a>
{% endblock %}
